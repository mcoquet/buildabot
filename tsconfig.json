{
  "compilerOptions": {
    "declaration": true,
    "esModuleInterop": true,
    "forceConsistentCasingInFileNames": true,
    "lib": ["es2015", "es2020"],
    "module": "es2022",
    "strict": true,
    "moduleResolution": "node",
    "resolveJsonModule": true,
    "sourceMap": true,
    "outDir": "dist",
    "skipLibCheck": true,
    "experimentalDecorators": true,
    "allowJs": true,
    "noImplicitAny": true,
    "target": "es2022"
  },
  "include": ["src/**/*", "example/index.ts"]
}
