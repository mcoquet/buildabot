{
  "compilerOptions": {
    "declaration": true,
    "esModuleInterop": true,
    "forceConsistentCasingInFileNames": true,
    "lib": ["es2015", "es2020"],
    "module": "es2022",
    "strict": true,
    "moduleResolution": "node",
    "sourceMap": true,
    "outDir": "dist",
    "skipLibCheck": true,
    "experimentalDecorators": true,
    "allowJs": true,
    "noImplicitAny": true,
    "target": "es2022",
    "rootDir": "src"
  },
  "include": ["src/**/*"]
}
