{
  "compilerOptions": {
    "module": "commonjs",
    "strict": true,
    "esModuleInterop": true,
    "target": "es2022",
    "moduleResolution": "node",
    "sourceMap": true,
    "outDir": "dist",
    "skipLibCheck": true,
    "experimentalDecorators": true,
    "allowJs": true,
    "noImplicitAny": true,
    "typeRoots": ["./node_modules/@types", "./types"],
    "lib": ["es2015", "es2020"]
  },
  "include": ["src/**/*", "chimaera/index.ts"]
}
